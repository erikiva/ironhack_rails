
<% if @contact.errors.any? %>
  <ul>
    <% @contact.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_for @contact, :html=>{:multipart => true} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <%= f.submit 'Save' %>
<% end %>
